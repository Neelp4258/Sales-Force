# Production Environment Configuration
# Copy this to .env and update with your production values

# Django Settings
DEBUG=False
SECRET_KEY=your-production-secret-key-generate-with-make-generate-secret
ALLOWED_HOSTS=.ambivare.com,ambivare.com

# Database
DB_NAME=ambivare_erp_prod
DB_USER=ambivare_prod
DB_PASSWORD=strong-database-password
DB_HOST=your-rds-endpoint.amazonaws.com
DB_PORT=5432

# Redis (ElastiCache)
REDIS_URL=redis://your-elasticache-endpoint.amazonaws.com:6379/0

# Email Configuration (Production)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=your-sendgrid-api-key
DEFAULT_FROM_EMAIL=noreply@ambivare.com

# Payment Gateways (Production Keys)
STRIPE_PUBLIC_KEY=pk_live_your-stripe-public-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

RAZORPAY_KEY_ID=rzp_live_your-razorpay-key
RAZORPAY_KEY_SECRET=your-razorpay-secret
RAZORPAY_WEBHOOK_SECRET=your-webhook-secret

# SMS/WhatsApp
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# AWS S3 for Media Storage
USE_S3=True
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=ambivare-media-prod
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=cdn.ambivare.com

# Celery
CELERY_BROKER_URL=redis://your-elasticache-endpoint.amazonaws.com:6379/0
CELERY_RESULT_BACKEND=redis://your-elasticache-endpoint.amazonaws.com:6379/0

# Security
ENCRYPTION_KEY=your-32-byte-encryption-key-for-sensitive-data
ENABLE_IP_WHITELIST=True
ADMIN_IP_WHITELIST=1.2.3.4,5.6.7.8

# Multi-tenancy
PUBLIC_SCHEMA_URLCONF=ambivare_erp.urls_public

# Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
MIXPANEL_TOKEN=your-mixpanel-token

# Rate Limiting
RATELIMIT_ENABLE=True
RATELIMIT_USE_CACHE=redis

# Monitoring
NEW_RELIC_LICENSE_KEY=your-new-relic-key
DATADOG_API_KEY=your-datadog-key